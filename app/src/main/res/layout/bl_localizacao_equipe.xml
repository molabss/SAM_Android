<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp">

        <!-- CabeÃ§alho -->
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@color/BLACK"
                android:layout_weight="1">

            <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="55dp"
                    android:text="@string/HEADER_LOCALIZACAO_EQUIPE"
                    android:textColor="@color/WHITE"
                    android:gravity="center"
                    android:textSize="20sp"
                    android:id="@+id/cabecalhoTextView"/>

        </LinearLayout>

        <!-- Linha Localicacao -->
        <LinearLayout
                android:id="@+id/conteudoLinearLayout"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@color/DARK_GRAY"
                android:layout_weight="1">

            <TextView
                    android:layout_width="120dp"
                    android:layout_height="75dp"
                    android:paddingLeft="10dp"
                    android:text="@string/menu_localizacao"
                    android:textColor="@color/WHITE"
                    android:gravity="center|left"
                    android:background="@color/GRAY2"
                    android:textSize="20sp"
                    android:id="@+id/localizacaoTextView"/>

            <AutoCompleteTextView
                    android:layout_width="0dp"
                    android:layout_height="75dp"
                    android:id="@+id/localizacaoAutoComplete"
                    android:layout_weight="1"
                    android:hint="@string/hint_selecione"
                    android:gravity="top"
                    android:layout_gravity="bottom"
                    android:completionThreshold="1"
                    android:textSize="20sp"/>

            <Button
                    android:id="@+id/btAddLocalizacao"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/add"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:textSize="20sp" />
        </LinearLayout>

        <!-- Linha Equipe -->
        <LinearLayout
                android:id="@+id/conteudoLinearLayout2"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@color/DARK_GRAY"
                android:layout_weight="1">

            <TextView
                    android:layout_width="120dp"
                    android:layout_height="55dp"
                    android:paddingLeft="10dp"
                    android:text="@string/equipe"
                    android:textColor="@color/WHITE"
                    android:gravity="center|left"
                    android:background="@color/GRAY2"
                    android:textSize="20sp"
                    android:id="@+id/equipeTextView"/>

            <AutoCompleteTextView
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:id="@+id/equipeAutoComplete"
                    android:layout_weight="1"
                    android:hint="@string/hint_selecione"
                    android:completionThreshold="1"
                    android:textSize="20sp"/>

            <Button
                    android:id="@+id/btnAddEquipe"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/add"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:textSize="20sp" />
        </LinearLayout>
    </LinearLayout>


</LinearLayout>