<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/WHITE"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical" >

            <TableLayout
                android:id="@+id/layoutDetailEditAbs"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:paddingBottom="10dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="550dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:background="@color/BLACK"
                android:gravity="center"
                android:orientation="vertical" >

                <TableLayout
                    android:id="@+id/tableHeaderAbs"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent" >

                    <TableRow
                        android:id="@+id/newHeaderAbs"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" >

                        <TextView
                            android:id="@+id/columnHeaderAbs"
                            android:layout_width="550dp"
                            android:layout_height="80dp"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:text="@string/dados_previos"
                            android:textColor="@color/WHITE"
                            android:textSize="25sp"
                            android:textStyle="bold" />
                    </TableRow>
                </TableLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:gravity="center"
                android:orientation="vertical" >

                <TableLayout
                    android:id="@+id/tableabs"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center" >

                    <TableRow
                        android:id="@+id/tbRwabs4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center" >

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:background="@color/GRAY2"
                            android:orientation="horizontal" >

                            <TextView
                                android:id="@+id/lblRae"
                                android:layout_width="170dp"
                                android:layout_height="50dp"
                                android:gravity="left|center_vertical"
                                android:paddingLeft="10dp"
                                android:text="@string/dados"
                                android:textColor="@color/WHITE"
                                android:textSize="20sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:background="@color/DARK_GRAY"
                            android:orientation="horizontal" >

                            <LinearLayout
                                android:layout_width="380dp"
                                android:layout_height="50dp"
                                android:layout_gravity="center"
                                android:background="@color/DARK_GRAY"
                                android:orientation="horizontal" >

                                <TextView
                                    android:id="@+id/absAuthRae"
                                    android:layout_width="380dp"
                                    android:layout_height="50dp"
                                    android:gravity="left|center_vertical"
                                    android:paddingLeft="10dp"
                                    android:textSize="20sp" />
                            </LinearLayout>
                        </LinearLayout>
                    </TableRow>

                                    <TableRow
                        android:id="@+id/tbRwabs0"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center" >

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:background="@color/GRAY2"
                            android:orientation="horizontal" >

                            <TextView
                                android:id="@+id/lblPref"
                                android:layout_width="170dp"
                                android:layout_height="50dp"
                                android:layout_gravity="left|center_vertical"
                                android:paddingLeft="10dp"
                                android:text="@string/equipamento"
                                android:textColor="@color/WHITE"
                                android:textSize="20sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:background="@color/DARK_GRAY"
                            android:orientation="horizontal" >

                            <AutoCompleteTextView
                                android:id="@+id/absAuthPref"
                                android:layout_width="380dp"
                                android:layout_height="50dp"
                                android:hint="@string/hint_selecione"
                                android:completionThreshold="1"
                                android:textSize="20sp" />

                            <TextView
                                android:id="@+id/absAuthPrefView"
                                android:layout_width="0dp"
                                android:layout_height="0dp"
                                android:layout_gravity="left|center_vertical"
                                android:paddingLeft="10dp"
                                android:textSize="20sp" />

                            <EditText
                                    android:id="@+id/editPrefQrCode"
                                    android:layout_width="330dp"
                                    android:layout_height="50dp"
                                    android:visibility="gone"
                                    android:textSize="20sp" />

                            <Button
                                    android:id="@+id/btAddEqpQRCode"
                                    android:layout_width="50dp"
                                    android:layout_height="50dp"
                                    android:background="@drawable/camera"
                                    android:gravity="center_vertical"
                                    android:paddingLeft="10dp"
                                    android:visibility="gone"
                                    android:textSize="20sp" />

                        </LinearLayout>
                    </TableRow>

                    <TableRow
                        android:id="@+id/tbRwabs11"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center" >

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:background="@color/GRAY2"
                            android:orientation="horizontal" >

                            <TextView
                                android:id="@+id/lblOper"
                                android:layout_width="170dp"
                                android:layout_height="50dp"
                                android:gravity="left|center_vertical"
                                android:paddingLeft="10dp"
                                android:text="@string/operador"
                                android:textColor="@color/WHITE"
                                android:textSize="20sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:background="@color/DARK_GRAY"
                            android:orientation="horizontal" >

                            <AutoCompleteTextView
                                android:id="@+id/absAuthOper"
                                android:layout_width="380dp"
                                android:layout_height="50dp"
                                android:hint="@string/hint_selecione"
                                android:completionThreshold="1"
                                android:textSize="20sp" />
                        </LinearLayout>
                    </TableRow>

                    <TableRow
                        android:id="@+id/tbRwabsKm"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center" >

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:background="@color/GRAY2"
                            android:orientation="horizontal" >

                            <TextView
                                android:id="@+id/lblQuilom"
                                android:layout_width="170dp"
                                android:layout_height="50dp"
                                android:gravity="left|center_vertical"
                                android:paddingLeft="10dp"
                                android:text="@string/hodometro"
                                android:textColor="@color/WHITE"
                                android:textSize="20sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:background="@color/DARK_GRAY"
                            android:orientation="horizontal" >

                            <LinearLayout
                                android:layout_width="380dp"
                                android:layout_height="50dp"
                                android:layout_gravity="center"
                                android:background="@color/DARK_GRAY"
                                android:orientation="horizontal" >

                                <EditText
                                    android:id="@+id/absAuthQuilm"
                                    android:layout_width="100dp"
                                    android:layout_height="50dp"
                                    android:layout_gravity="center_vertical"
                                    android:inputType="number"
                                    android:maxLength="10"
                                    android:textSize="18sp" />
                            </LinearLayout>
                        </LinearLayout>
                    </TableRow>

                    <TableRow
                        android:id="@+id/tbRwabshorim"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center" >

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:background="@color/GRAY2"
                            android:orientation="horizontal" >

                            <TextView
                                android:id="@+id/lblHorim"
                                android:layout_width="170dp"
                                android:layout_height="50dp"
                                android:gravity="left|center_vertical"
                                android:paddingLeft="10dp"
                                android:text="@string/horimetro"
                                android:textColor="@color/WHITE"
                                android:textSize="20sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:background="@color/DARK_GRAY"
                            android:orientation="horizontal" >

                            <LinearLayout
                                android:layout_width="380dp"
                                android:layout_height="50dp"
                                android:layout_gravity="center"
                                android:background="@color/DARK_GRAY"
                                android:orientation="horizontal" >

                                <EditText
                                    android:id="@+id/absAuthHorim"
                                    android:layout_width="100dp"
                                    android:layout_height="50dp"
                                    android:layout_gravity="center_vertical"
                                    android:inputType="number"
                                    android:maxLength="10"
                                    android:textSize="18sp" />
                            </LinearLayout>
                        </LinearLayout>
                    </TableRow>
                </TableLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="top"
                android:orientation="vertical" >

                <TableLayout
                    android:id="@+id/tableFooterAbsAuth"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <LinearLayout
                    android:layout_width="385dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:gravity="top"
                    android:orientation="vertical"
                    android:paddingTop="5dp" >
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:paddingTop="5dp" >

                    <Button
                        android:id="@+id/btAbsAuthNew"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:text="@string/novo" />

                    <Button
                        android:id="@+id/btAbsAuthSave"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:text="@string/salvar" />

                    <Button
                        android:id="@+id/btAbsAuthCancel"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:text="@string/cancelar" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="400dp"
                android:orientation="vertical"
                android:paddingTop="10dp" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:gravity="center"
                        android:orientation="vertical" >

                        <TableLayout
                            android:id="@+id/tableHeaderAbs9Top"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <TableLayout
                            android:id="@+id/tableHeaderAbs9"
                            android:layout_width="wrap_content"
                            android:layout_height="fill_parent" />
                    </LinearLayout>

                    <ScrollView
                        android:id="@+id/scrollViewEqpFull"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center" >

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical" >

                            <LinearLayout
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="10dp"
                                android:gravity="center"
                                android:orientation="vertical" >

                                <TableLayout
                                    android:id="@+id/tableGridAbs9"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" />
                            </LinearLayout>
                        </LinearLayout>
                    </ScrollView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical" >

                    <TableLayout
                        android:id="@+id/tableFooterAbs9"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</FrameLayout>