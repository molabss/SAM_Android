<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginTop="25dp">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  android:orientation="horizontal"
                  android:background="@color/BLACK"
                  android:gravity="center|left"
                  android:layout_width="match_parent"
                  android:layout_height="match_parent">

        <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="55dp"
                android:paddingLeft="10dp"
                android:text="@string/HEADER_ADD_PRODUCAO_SERVICO"
                android:textColor="@color/WHITE"
                android:gravity="center"
                android:textSize="20sp"
                android:id="@+id/addServicoTextView"/>

        <ImageView
                android:id="@+id/saveEventoImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/save1"
                android:contentDescription="@null"
                android:gravity="center"
                android:layout_gravity="center"
                android:textSize="20sp" />

    </LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  android:id="@+id/conteudoLinearLayout3"
                  android:orientation="horizontal"
                  android:background="@color/DARK_GRAY"
                  android:gravity="center|left"
                  android:layout_width="match_parent"
                  android:layout_height="match_parent">

        <TextView
                android:layout_width="130dp"
                android:layout_height="55dp"
                android:paddingLeft="10dp"
                android:text="@string/servico"
                android:textColor="@color/WHITE"
                android:gravity="center|left"
                android:background="@color/GRAY2"
                android:textSize="20sp"
                android:id="@+id/servicoTextView"/>

        <EditText
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:id="@+id/servicoEditText"
                android:layout_weight="1"/>

    </LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  android:id="@+id/conteudoLinearLayout4"
                  android:orientation="horizontal"
                  android:background="@color/DARK_GRAY"
                  android:gravity="center|left"
                  android:layout_width="match_parent"
                  android:layout_height="match_parent">

        <TextView
                android:layout_width="130dp"
                android:layout_height="55dp"
                android:paddingLeft="10dp"
                android:text="@string/producao"
                android:textColor="@color/WHITE"
                android:gravity="center|left"
                android:background="@color/GRAY2"
                android:textSize="20sp"
                android:id="@+id/producaoTextView"/>

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                      android:id="@+id/conteudoLinearLayout6"
                      android:orientation="horizontal"
                      android:gravity="center|left"
                      android:layout_width="match_parent"
                      android:layout_height="match_parent">

                <EditText
                        android:layout_width="120dp"
                        android:layout_height="50dp"
                        android:inputType="numberDecimal"
                        android:ems="10"
                        android:maxLength="6"
                        android:gravity="center|right"
                        android:id="@+id/producaoEditText"/>

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:paddingLeft="10dp"
                        android:textColor="@color/BLACK"
                        android:gravity="center|left"
                        android:textSize="20sp"
                        android:id="@+id/unidadeTextView"/>

            </LinearLayout>

        </LinearLayout>

    <!-- Linha Hora Inicio -->
    <LinearLayout
            android:id="@+id/conteudoLinearLayout7"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@color/DARK_GRAY"
            android:layout_weight="1">

        <TextView
                android:layout_width="130dp"
                android:layout_height="55dp"
                android:paddingLeft="10dp"
                android:text="@string/hora_inicio"
                android:textColor="@color/WHITE"
                android:gravity="center|left"
                android:background="@color/GRAY2"
                android:textSize="20sp"
                android:id="@+id/horaIniTextView"/>

        <EditText
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:ems="10"
                android:maxLength="5"
                android:id="@+id/horaIniEditText"
                />

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="55dp"
                android:paddingLeft="10dp"
                android:text="@string/hora_termino"
                android:textSize="20sp"
                android:id="@+id/horaFimTextView"/>

        <EditText
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:ems="10"
                android:maxLength="5"
                android:id="@+id/horaFimEditText"
                />

    </LinearLayout>

    <LinearLayout
            android:id="@+id/conteudoLinearLayout5"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@color/DARK_GRAY"
            android:layout_weight="1">

        <TextView
                android:layout_width="130dp"
                android:layout_height="55dp"
                android:paddingLeft="10dp"
                android:text="@string/observacoes"
                android:textColor="@color/WHITE"
                android:gravity="center|left"
                android:background="@color/GRAY2"
                android:textSize="20sp"
                android:id="@+id/obsTextView"/>

        <EditText
                android:layout_width="0dp"
                android:layout_height="55dp"
                android:layout_weight="1"
                android:ems="10"
                android:id="@+id/obsEditText"
                />

    </LinearLayout>


</LinearLayout>