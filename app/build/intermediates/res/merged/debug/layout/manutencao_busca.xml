<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:background="@color/WHITE">

    <LinearLayout android:layout_width="fill_parent"
                  android:layout_height="fill_parent"
                  android:layout_marginLeft="25dp"
                  android:layout_marginRight="25dp"
                  android:layout_marginTop="25dp"
                  android:orientation="vertical"
                  android:background="@color/WHITE">

            <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:background="@color/DARK_GRAY"
                android:orientation="horizontal"
                android:paddingRight="10dp">

            <Spinner
                    android:id="@+id/manBus_spnTipoFiltro"
                    android:layout_width="220dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:textSize="20sp"/>

            <AutoCompleteTextView
                    android:id="@+id/manBus_actvEquipamento"
                    android:layout_width="224dp"
                    android:layout_height="50dp"
                    android:completionThreshold="1"
                    android:hint="@string/hint_selecione"
                    android:padding="10dp"
                    android:textSize="20sp">
            </AutoCompleteTextView>


            <TextView
                    android:id="@+id/manBus_tvTotal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|center"
                    android:gravity="right"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:text="Total 0"/>

        </LinearLayout>

        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:orientation="horizontal">

        </LinearLayout>
    </LinearLayout>

            <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">

        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:background="@color/DARK_GRAY"
                android:orientation="horizontal"
                android:paddingRight="10dp">


            <AutoCompleteTextView
                    android:id="@+id/manBus_actvData"
                    android:layout_width="224dp"
                    android:layout_height="50dp"
                    android:completionThreshold="1"
                    android:dropDownWidth="300dp"
                    android:hint="@string/hint_selecione"
                    android:padding="10dp"
                    android:textSize="20sp"/>

       </LinearLayout>

        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:orientation="horizontal">


            <Button
                    android:id="@+id/manBus_btnBusca"
                    android:layout_width="150dp"
                    android:layout_height="50dp"
                    android:layout_gravity="right"
                    android:layout_marginLeft="10dp"
                    android:text="@string/buscar"
                    android:textSize="20sp">
            </Button>
        </LinearLayout>

                <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:orientation="horizontal">


                    <Button
                            android:id="@+id/manBus_btnLimpa"
                            android:layout_width="150dp"
                            android:layout_height="50dp"
                            android:layout_gravity="right"
                            android:layout_marginLeft="10dp"
                            android:text="@string/limpar"
                            android:textSize="20sp">
                    </Button>
                </LinearLayout>

    </LinearLayout>

            <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

        <TextView

                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:text="Equipamentos"
                android:gravity="center"
                android:textSize="20sp"
                android:textColor="@color/WHITE"
                android:background="@color/BLACK"/>



    </LinearLayout>

            <ScrollView
            android:id="@+id/manBus_scrvItensEncontrados"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:gravity="center">


        <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent" android:id="@+id/manBus_scvListaItem">


        </LinearLayout>


    </ScrollView>

            <LinearLayout android:layout_width="fill_parent"
                  android:layout_height="8dp"
                  android:background="@color/BLACK"
                  android:layout_marginTop="5dp">
    </LinearLayout>

     </LinearLayout>

</LinearLayout>
