        android:padding="0dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/columnHeaderVsc5"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:padding="0dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/columnHeaderVsc6"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
